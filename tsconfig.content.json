{
  "compilerOptions": {
    "target": "ES2020",
    "module": "none",
    "moduleResolution": "node",
    "strict": true,
    "outFile": "./dist/content/content.js",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "noEmit": false,
    "noEmitHelpers": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": ["webextension-polyfill"]
  },
  "files": [
    "src/types/types.ts",
    "src/types/global.d.ts",
    "src/config/constants.ts",
    "src/content/loggings.ts",
    "src/content/utils/utils.ts",
    "src/content/utils/dom.ts",
    "src/content/utils/text.ts",
    "src/content/utils/isolatedPlayer.ts",
    "src/content/utils/navigation.ts",
    "src/content/utils/videoSettings.ts",
    "src/content/titles/index.ts",
    "src/content/titles/mainTitle.ts",
    "src/content/titles/browsingTitles.ts",
    "src/content/titles/shortsTitles.ts",
    "src/content/titles/notificationTitles.ts",
    "src/content/audio/audioIndex.ts",
    "src/content/description/descriptionIndex.ts",
    "src/content/subtitles/subtitlesIndex.ts",
    "src/content/channelName/channelName.ts",
    "src/content/chapters/chaptersIndex.ts",
    "src/content/description/searchDescriptions.ts",
    "src/content/observers.ts",
    "src/content/index.ts"
  ]
}
